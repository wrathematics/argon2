year <- sub("-.*", "", meta$Date)
note <- sprintf("{R} package version %s", meta$Version)

bibentry(
  bibtype = "Misc",
  title = "{argon2}: Secure Password Hashing",
  author = person("Drew", "Schmidt"),
  year = year,
  note = note,
  url = "https://cran.r-project.org/package=argon2",
  textVersion = NULL,
  key = "argon2Package"
)
